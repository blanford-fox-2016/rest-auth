extends layout

block content
  nav.navbar.navbar-inverse
    .container-fluid
      .navbar-header
        a.navbar-brand(href='/') REST-AUTH
      ul.nav.navbar-nav
        li
          a(href='/') Register
        li.active
          a(href='/api/login') Login
        li
          a(href='/api/users') List
        li
          a(href='/api/auth') Auth

  .container
    h1= title
    p Please login to continue
    form(method='POST', action='/api/auth')
      .form-group
        label(for='exampleInputUsername') Username
        input#exampleInputUsername.form-control(type='text', placeholder='Username', name='username')
      .form-group
        label(for='exampleInputPassword') Password
        input#exampleInputPassword.form-control(type='password', placeholder='Password', name='password')

      button.btn.btn-default(type='submit') Submit
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js", integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa", crossorigin="anonymous")
