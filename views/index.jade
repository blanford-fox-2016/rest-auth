extends layout

block content

  .jumbotron
    .container
      h1 REST API AUTH
      p
        | This is a simple example of REST API Auth implementation using Node.JS, express, jwt, and sequelize using PostgreSQL database.

  .container
    form.form-horizontal(action='/api/users' method='post')
      fieldset
        legend User Registration
        .form-group
          label.col-lg-2.control-label.text-left(for='inputEmail') Name
          .col-lg-10
            input#inputName.form-control(type='text', name='name', placeholder='Enter your name' required)
        .form-group
          label.col-lg-2.control-label.text-left(for='inputEmail') Email
          .col-lg-10
            input#inputEmail.form-control(type='email', name='email', placeholder='Enter your Email' required)
        .form-group
          label.col-lg-2.control-label.text-left(for='inputUsername') Username
          .col-lg-10
            input#inputUsername.form-control(type='text', name='username' placeholder='Enter your username' required)
        .form-group
          label.col-lg-2.control-label.text-left(for='inputPassword') Password
          .col-lg-10
            input#inputPassword.form-control(type='password', name='password', placeholder='Enter your password' required)
        .form-group
          .col-lg-10.col-lg-offset-2
            button.btn.btn-primary(type='submit') Submit
